{
  "defaultSeverity": "warning",
  "extends": [
    "tslint:latest"
  ],
  "jsRules": {},
  "rules": {
    "arrow-parens": false,
    "curly": false,
    "indent": [
      true,
      "spaces",
      2
    ],
    "max-classes-per-file": [true, 2],
    "max-line-length": [true,200],
    "member-ordering": false,
    "no-angle-bracket-type-assertion": false,
    "no-console": true,
    "no-consecutive-blank-lines": [
      true,
      2
    ],
    "no-reference": false,
    "no-string-literal":false,
    "no-submodule-imports": false,
    "no-shadowed-variable": false,
    "ordered-imports": false,
    "object-literal-sort-keys": false,
    "quotemark": [
      true,
      "single",
      "avoid-escape",
      "avoid-template"
    ],
    "semicolon": [
      true,
      "never"
    ],
    "space-within-parens": [
      true,
      1
    ],
    "space-before-function-paren": [
      true,
      {
        "anonymous": "never",
        "named": "never",
        "asyncArrow": "always"
      }
    ],
    "trailing-comma": [
      true,
      {
        "multiline": {
          "objects": "never",
          "arrays": "never",
          "functions": "never",
          "typeLiterals": "ignore"
        },
        "esSpecCompliant": true
      }
    ],
    "variable-name" : [
      true,
      "allow-leading-underscore",
      "allow-pascal-case",
      "ban-keywords",
      "check-format"
    ],
    "whitespace": [
      true,
      "check-operator",
      "check-decl",
      "check-module",
      "check-separator",
      "check-rest-spread",
      "check-type",
      "check-type-operator",
      "check-preblock"
    ]
  },
  "rulesDirectory": []
}